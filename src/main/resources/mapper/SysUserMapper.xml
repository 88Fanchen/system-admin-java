<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fanchen.mapper.SysUserMapper">

    <insert id="register" parameterType="com.fanchen.entity.SysUser" useGeneratedKeys="true" keyProperty="id">
        insert into sys_user(
        <if test="id != null and id != 0">id,</if>
        <if test="username != null and username != ''">username,</if>
        <if test="password != null and password != ''">password,</if>
        <if test="avatar != null and avatar != ''">avatar,</if>
        <if test="deptId != null and deptId != 0">dept_id,</if>
        <if test="phoneNumber != null and phoneNumber != 0">phone_number,</if>
        create_time,
        status
        )values(
        <if test="id != null and id != 0">#{id},</if>
        <if test="username != null and username != ''">#{username},</if>
        <if test="password != null and password != ''">#{password},</if>
        <if test="avatar != null and avatar != ''">#{avatar},</if>
        <if test="deptId != null and deptId != 0">#{deptId},</if>
        <if test="phoneNumber != null and phoneNumber != 0">#{phoneNumber},</if>
        sysdate(),
        1
        )
    </insert>

    <select id="getMenuIds" resultType="java.lang.Long">
        SELECT DISTINCT
            rm.menu_id
        FROM
            sys_user_role ur
        LEFT JOIN sys_role_menu rm ON ur.role_id = rm.role_id
        WHERE
	        ur.user_id = #{userId}
    </select>

    <select id="listByMenuId" resultType="com.fanchen.entity.SysUser">
        SELECT DISTINCT
            su.*
        FROM
            sys_user_role ur
        LEFT JOIN sys_role_menu rm ON ur.role_id = rm.role_id
        LEFT JOIN sys_user su ON ur.user_id = su.id
        WHERE
            rm.menu_id = #{menuId}
    </select>

</mapper>
